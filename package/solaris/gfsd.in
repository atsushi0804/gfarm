#!/sbin/sh
#
# $Id$

GFSD=@prefix@/sbin/gfsd
PID_FILE=/var/run/gfsd.pid

# workaround a problem that "ld -R" doesn't work with indirectly dependent SOs
if [ -n "@globus_location@" ] && [ -d "@globus_location@" ]; then
	GLOBUS_LOCATION="@globus_location@"
	export GLOBUS_LOCATION
	if [ -f "$GLOBUS_LOCATION/etc/globus-user-env.sh" ]; then
		. "$GLOBUS_LOCATION/etc/globus-user-env.sh"
	fi
fi


case "$1" in 
'start')
	if [ -x $GFSD -a -f /etc/gfarm.conf ]; then
		$GFSD -P $PID_FILE
	fi	
	;;

'stop')
	if [ -f $PID_FILE ]; then
		kill -TERM `cat $PID_FILE`
	fi
	;;

'restart')
	$0 stop
	$0 start
	;;

*)
	echo "Usage: $0 { start | stop }"
	exit 1
	;;
esac
exit 0
