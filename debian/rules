	dh_installdeb -pgfarm-fsnode
	dh_shlibdeps -pgfarm-fsnode
	dh_gencontrol -pgfarm-fsnode
	dh_md5sums -pgfarm-fsnode
#	dh_builddeb -pgfarm-fsnode

#	dh_installdebconf -pgfarm-fsnode
#	dh_installdocs -pgfarm-fsnode
#	dh_installexamples -pgfarm-fsnode
#	dh_installmenu -pgfarm-fsnode
