FROM centos:7

# System dependent

ENV TZ=Asia/Tokyo

RUN sed -i -e '/override_install_langs/s/$/,ja_JP.utf8/g' /etc/yum.conf
RUN sed -i -e '/tsflags=nodocs/s/^/#/' /etc/yum.conf

RUN yum -y update \
    && yum -y reinstall glibc-common

RUN yum -y update \
    && yum -y install \
    sudo \
    openssh-server \
    rsyslog \
    rsync \
    langpacks-ja \
    && yum -y groupinstall "Development Tools"

RUN yum -y update \
    && yum -y install \
    epel-release \
    openssl-devel \
    postgresql-devel \
    postgresql \
    postgresql-server \
    fuse \
    fuse-devel \
    libacl-devel \
    ruby

RUN yum -y update \
    && yum -y --enablerepo=epel install \
    globus-gssapi-gsi-devel \
    globus-simple-ca \
    globus-gsi-cert-utils-progs \
    globus-proxy-utils \
    && globus-version

## for debug
RUN yum -y update \
    && yum -y install \
    docbook-utils docbook-style-xsl libxslt \
    nc ldns iproute2 net-tools bind-utils telnet tcpdump \
    gdb valgrind strace inotify-tools \
    man man-pages man-pages-ja man-db which \
    nano emacs-nox less

RUN yum -y update \
    && debuginfo-install -y \
    fuse-libs

RUN sed -i 's@^Defaults    secure_path = /sbin:/bin:/usr/sbin:/usr/bin$@Defaults    secure_path = /usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin@' /etc/sudoers


# System independent (see setup-univ.sh)

ARG GFDOCKER_USERNAME_PREFIX
ARG GFDOCKER_PRIMARY_USER
ARG GFDOCKER_NUM_GFMDS
ARG GFDOCKER_NUM_GFSDS
ARG GFDOCKER_NUM_USERS
ARG GFDOCKER_HOSTNAME_PREFIX_GFMD
ARG GFDOCKER_HOSTNAME_PREFIX_GFSD
COPY . /tmp/gfarm
COPY gfarm2fs /tmp/gfarm2fs
RUN "/tmp/gfarm/docker/dev/common/setup-univ.sh"

CMD ["/sbin/init"]
