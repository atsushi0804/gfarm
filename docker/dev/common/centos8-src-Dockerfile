FROM gfarm-dev:centos8-base

# System independent
ARG GFDOCKER_NUM_JOBS
ARG GFDOCKER_PRIMARY_USER
ARG GFDOCKER_ENABLE_PROXY

# SASL is enabled
ARG GFDOCKER_SASL_MECH_LIST
ARG GFDOCKER_SASL_LOG_LEVEL
ARG GFDOCKER_SASL_XOAUTH2_SCOPE
ARG GFDOCKER_SASL_XOAUTH2_AUD
ARG GFDOCKER_SASL_XOAUTH2_USER_CLAIM

RUN "/home/${GFDOCKER_PRIMARY_USER}/gfarm/docker/dev/common/make-install-univ.sh"

RUN mandb
