FROM centos:8

# System dependent

RUN rpm --import /etc/pki/rpm-gpg/RPM-GPG-KEY-centosofficial

RUN yum -y update
RUN yum -y install langpacks-ja

# include systemd
RUN yum -y install sudo openssh-server rsync

### timedatectl ... System has not been booted with systemd as init
### system (PID 1).  Can't operte.  Failed to create bus connection:
### Host is down
# RUN timedatectl set-timezone Asia/Tokyo
RUN cp /usr/share/zoneinfo/Asia/Tokyo /etc/localtime

RUN sed -i 's@^Defaults    secure_path = /sbin:/bin:/usr/sbin:/usr/bin$@Defaults    secure_path = /usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin@' /etc/sudoers

RUN yum -y groupinstall "Development Tools"

RUN yum -y install epel-release openssl-devel postgresql-devel postgresql \
	postgresql-server fuse fuse-devel libacl-devel ruby

RUN yum -y --enablerepo=epel install globus-gssapi-gsi-devel globus-simple-ca \
	globus-gsi-cert-utils-progs globus-proxy-utils

## for debug
# RUN sed -i -e '/tsflags=nodocs/s/^/#/' /etc/yum.conf
RUN yum -y install nc ldns iproute net-tools bind-utils telnet \
	man man-pages man-db which \
	gdb strace valgrind libtsan \
	nano emacs-nox less

## clean
RUN rm -rf /var/cache/yum/* && yum clean all

## for grid-cert-request
RUN mkdir -p /var/adm && head -1000 /dev/urandom >> /var/adm/wtmp && \
    cp /var/adm/wtmp /var/log/messages

# System independent (see setup-univ.sh)

ARG GFDOCKER_USERNAME_PREFIX
ARG GFDOCKER_PRIMARY_USER
ARG GFDOCKER_NUM_GFMDS
ARG GFDOCKER_NUM_GFSDS
ARG GFDOCKER_NUM_USERS
ARG GFDOCKER_HOSTNAME_PREFIX_GFMD
ARG GFDOCKER_HOSTNAME_PREFIX_GFSD
COPY . /tmp/gfarm
COPY gfarm2fs /tmp/gfarm2fs
RUN "/tmp/gfarm/docker/dev/common/setup-univ.sh"

CMD ["/sbin/init"]
