top_objdir = @top_objdir@
top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(top_srcdir)/makes/var.mk

GLOBUS_SUBDIRS = lib/libgfsl

SUBDIRS = \
	doc \
	man \
	include \
	@globus_subdirs@ \
	nslib \
	lib \
	gfarmlib \
	gfarmd \
	gfarm \
	gfmd \
	gfsd \
	nstool \
	gftool \
	gfptool

all: make-link

include $(top_srcdir)/makes/subdir.mk

make-link:
	-rm -f $(OBJINCDIR)/gfarm_config.h; \
		ln -s ../gfarm_config.h $(OBJINCDIR)

post-distclean-hook:
	rm -f config.log config.status config.cache \
		gfarm_config.h Makefile makes/config.mk
