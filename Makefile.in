top_objdir = @top_objdir@
top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(top_srcdir)/makes/var.mk

SUBDIRS = \
	doc \
	man \
	include/gfarm \
	lib \
	`[ -d $(srcdir)/ns ] && echo ns` \
	server \
	gftool \
	gfptool

all:

include $(top_srcdir)/makes/subdir.mk

post-distclean-hook:
	rm -f config.log config.status config.cache \
		$(INC_OBJDIR)/gfarm_config.h \
		Makefile makes/config.mk
