#!/bin/sh
#
# $NetBSD$
#
# Gfarm filesystem node daemon
#
# PROVIDE: gfmd
# REQUIRE: DAEMON

if [ -f /etc/rc.subr ]; then
	. /etc/rc.subr
fi

CONF="@config_gfarm_gfarm_config@"
OPTIONS="@config_gfarm_gfmd_option@"

name="gfmd"
rcvar=${name}
command="@config_gfarm_prefix@/sbin/${name}"
pidfile="@config_gfarm_run_dir@/${name}.pid"
required_files="$CONF"
# add more flags through ${${name}_flags}
command_args="-P $pidfile $OPTIONS"

if [ -f /etc/rc.subr ]; then
	load_rc_config $name
	run_rc_command "$1"
else
	echo -n " ${name}"
	${command} ${gfmd_flags} ${command_args}
fi
